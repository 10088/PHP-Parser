            name: a
        )
        name: b
    )
    2: Expr_StaticPropertyFetch(
        class: Name(
            parts: array(
                0: A
            )
        )
        name: b
    )
    3: Expr_ArrayDimFetch(
        var: Expr_Variable(
            name: a
        )
        dim: Expr_Variable(
            name: b
        )
    )
    4: Expr_ArrayDimFetch(
        var: Expr_Variable(
            name: a
        )
        dim: Expr_Variable(
            name: b
        )
    )
    5: Expr_ConstFetch(
        name: Name(
            parts: array(
                0: A
            )
        )
